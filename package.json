{
  "name": "tradetrends",
  "version": "1.0.0",
  "description": "Fast affiliate-first product discovery engine for Pinterest and Google traffic",
  "scripts": {
    "dev": "netlify dev",
    "dev:offline": "netlify dev --offline",
    "prebuild": "node scripts/generate-sitemap.js",
    "build": "node scripts/validate.js",
    "test": "npm run validate && npm run test:e2e",
    "test:e2e": "playwright test --reporter=line",
    "test:fast": "playwright test --reporter=dot",
    "test:debug": "DEBUG=pw:api playwright test --reporter=line",
    "test:production": "node scripts/check-production.js",
    "validate": "node scripts/validate.js"
  },
  "keywords": [
    "affiliate",
    "netlify",
    "pinterest",
    "seo",
    "static-site",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@netlify/blobs": "^7.0.0",
    "@playwright/test": "^1.40.0",
    "netlify-cli": "^17.0.0"
  }
}
